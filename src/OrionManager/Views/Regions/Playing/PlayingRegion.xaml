<UserControl x:Class = "OrionManager.Views.Regions.Playing.PlayingRegion"
             xmlns = "http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x = "http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc = "http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d = "http://schemas.microsoft.com/expression/blend/2008"
             xmlns:playing = "clr-namespace:OrionManager.Views.Regions.Playing"
             xmlns:main = "clr-namespace:OrionManager.ViewModel.ViewModels.Main;assembly=OrionManager.ViewModel" xmlns:constants="clr-namespace:OrionManager.Theme"
             mc:Ignorable = "d"
             x:ClassModifier = "internal">

    <d:UserControl.DataContext>
        <main:MainViewModel />
    </d:UserControl.DataContext>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height = "*" />
            <RowDefinition Height = "Auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width = "Auto" />
            <ColumnDefinition Width = "*" />
        </Grid.ColumnDefinitions>

        <playing:PlayingCommandRegion Grid.Row="0"
                                      Grid.Column = "0"
                                      Grid.RowSpan="2" />

        <Viewbox Grid.Row="0"
                 Grid.Column = "1"
                 Stretch="Uniform"
                 StretchDirection="UpOnly"
                 VerticalAlignment="Top"
                 HorizontalAlignment="Left">
            <playing:PlayerListRegion />
        </Viewbox>

        <playing:RoundCounterRegion Grid.Row = "1"
                                    Grid.Column="0"
                                    Grid.ColumnSpan="2" />
    </Grid>

</UserControl>