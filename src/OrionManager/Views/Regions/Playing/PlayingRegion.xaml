<UserControl x:Class = "OrionManager.Views.Regions.Playing.PlayingRegion"
             xmlns = "http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x = "http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc = "http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d = "http://schemas.microsoft.com/expression/blend/2008"
             xmlns:playing = "clr-namespace:OrionManager.Views.Regions.Playing"
             xmlns:main = "clr-namespace:OrionManager.ViewModel.ViewModels.Main;assembly=OrionManager.ViewModel" xmlns:constants="clr-namespace:OrionManager.Theme"
             mc:Ignorable = "d"
             x:ClassModifier = "internal">

    <d:UserControl.DataContext>
        <main:MainViewModel />
    </d:UserControl.DataContext>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height = "*" />
            <RowDefinition Height = "Auto" />
        </Grid.RowDefinitions>

        <Viewbox Grid.Row="0"
                 Stretch="Uniform"
                 VerticalAlignment="Top"
                 HorizontalAlignment="Center">
            <playing:PlayerListRegion />
        </Viewbox>

        <playing:RoundCounterRegion Grid.Row = "1" />
    </Grid>

</UserControl>